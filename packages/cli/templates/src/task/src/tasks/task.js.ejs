const { BaseTask } = require('@checkup/core');

module.exports = class <%- taskClass %> extends BaseTask {
  taskName = '<%- name %>';
  taskDisplayName = '<%- _.startCase(name.split('-').join(' ')) %>';
  description = '<%- description %>';
  category = '<%- category %>';
  <%_ if (group) { _%>
  group = '<%- group %>';
  <%_ } _%>

  constructor(pluginName, context) {
    super(pluginName, context);

    this.addRule();
  }

  async run() {
    this.addResult(
      `${this.taskName} result`,
      'informational',
      'note'
    );

    return this.results;
  }
}
