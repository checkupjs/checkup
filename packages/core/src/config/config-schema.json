{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "taskConfig": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]*/?[a-zA-Z0-9-_]*$": {
          "oneOf": [
            { "type": "string", "enum": ["on", "off"] },
            {
              "type": "array",
              "items": [
                {
                  "type": "string",
                  "enum": ["on", "off"]
                },
                {
                  "type": "object"
                }
              ]
            }
          ]
        }
      }
    }
  },
  "properties": {
    "excludePaths": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "plugins": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "tasks": {
      "$ref": "#/definitions/taskConfig"
    }
  },
  "type": "object",
  "required": ["plugins", "tasks"]
}
