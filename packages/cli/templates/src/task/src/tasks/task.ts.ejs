import { BaseTask, Task } from '@checkup/core';
import { Result } from 'sarif';

export default class <%- taskClass %> extends BaseTask implements Task {
  taskName = '<%- name %>';
  taskDisplayName = '<%- _.startCase(name.split('-').join(' ')) %>';
  category = '<%- category %>';
  <%_ if (group) { _%>
  group = '<%- group %>';
  <%_ } _%>

  async run(): Promise<Result[]> {
    return [
      {
        message: { text: `${this.taskName} result` },
        occurrenceCount: 1,
        ruleId: this.taskName,
        properties: {
          taskDisplayName: this.taskDisplayName,
          category: this.category,
        },
      },
    ];
  }
}
