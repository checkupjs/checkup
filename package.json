{
  "name": "checkup",
  "version": "1.0.0-beta.7",
  "private": true,
  "repository": "https://github.com/checkupjs/checkup.git",
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@gmail.com>",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --watch",
    "clean": "tsc --build --clean",
    "lint": "eslint .",
    "prepare": "yarn build",
    "test": "yarn workspaces run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,json,ts,d.ts}": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@types/date-and-time": "^0.13.0",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.20",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/lodash": "^4.14.168",
    "@types/node": "^15",
    "@types/node-fetch": "^2.5.7",
    "@types/tmp": "^0.2.0",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-test": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unicorn": "^30.0.0",
    "husky": "^6.0.0",
    "jest": "^25.5.4",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "release-it": "^14.6.1",
    "release-it-lerna-changelog": "^3.1.0",
    "release-it-yarn-workspaces": "^2.0.1",
    "ts-jest": "^25.5.1",
    "ts-node": "^9",
    "type-fest": "^1.0.2",
    "typescript": "^3.9"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "changelog": {
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal",
      "checkup-task": ":bar_chart: Checkup Task",
      "generators": ":recycle: Generators"
    }
  },
  "resolutions": {
    "type-fest": "^0.20.2"
  },
  "volta": {
    "node": "12.16.2",
    "yarn": "1.22.4",
    "npm": "6.14.12"
  }
}
