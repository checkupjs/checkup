{
  "name": "checkup",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/checkupjs/checkup.git",
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@gmail.com>",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --watch",
    "clean": "tsc --build --clean",
    "lint": "eslint . --cache --ext .ts",
    "test": "yarn workspaces run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "eslint --ext ts"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/date-and-time": "^0.6.0",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.1.5",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13",
    "@types/tmp": "^0.1.0",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-test": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-unicorn": "^18.0.1",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "stdout-stderr": "^0.1.13",
    "ts-jest": "^25.3.1",
    "ts-node": "^8",
    "type-fest": "^0.13.1",
    "typescript": "^3.8",
    "release-it": "^13.5.1",
    "release-it-lerna-changelog": "^2.1.2",
    "release-it-yarn-workspaces": "^1.2.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "12.16.2",
    "yarn": "1.22.4"
  }
}
