{
  "name": "checkup",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/checkupjs/checkup.git",
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@gmail.com>",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn wsrun --stages build",
    "build:watch": "yarn wsrun watch",
    "clean": "yarn wsrun clean",
    "lint": "eslint . --cache --ext .ts",
    "test": "yarn wsrun test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "eslint --ext ts"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-unicorn": "^18.0.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.0",
    "prettier": "^1.19.1",
    "release-it": "^13.5.1",
    "release-it-lerna-changelog": "^2.1.2",
    "release-it-yarn-workspaces": "^1.1.0",
    "wsrun": "^5.2.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
