{
  "name": "checkup",
  "version": "0.3.1",
  "private": true,
  "repository": "https://github.com/checkupjs/checkup.git",
  "license": "MIT",
  "author": "Steve Calvert <steve.calvert@gmail.com>",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --watch",
    "clean": "tsc --build --clean",
    "lint": "eslint . --cache --ext .ts",
    "test": "yarn workspaces run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "eslint --ext ts"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/date-and-time": "^0.13.0",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.8",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/lodash": "^4.14.158",
    "@types/node": "^14",
    "@types/tmp": "^0.2.0",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-test": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unicorn": "^21.0.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "release-it": "^13.6.6",
    "release-it-lerna-changelog": "^2.3.0",
    "release-it-yarn-workspaces": "^1.4.0",
    "stdout-stderr": "^0.1.13",
    "ts-jest": "^25.5.1",
    "ts-node": "^8",
    "type-fest": "^0.16.0",
    "typescript": "^3.9"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "changelog": {
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal",
      "checkup-task": ":bar_chart: Checkup Task",
      "generators": ":recycle: Generators"
    }
  },
  "resolutions": {
    "type-fest": "^0.13.1"
  },
  "volta": {
    "node": "12.16.2",
    "yarn": "1.22.4"
  }
}
